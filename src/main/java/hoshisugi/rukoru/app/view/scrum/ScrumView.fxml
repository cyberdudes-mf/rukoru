<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hoshisugi.rukoru.app.view.scrum.ScrumController">
   <children>
      <LineChart fx:id="burnDownChart" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
        <xAxis>
          <NumberAxis autoRanging="false" label="Sprints" minorTickCount="1" minorTickLength="1.0" side="BOTTOM" tickUnit="1.0" upperBound="10.0" />
        </xAxis>
        <yAxis>
          <NumberAxis label="Story points" side="LEFT" />
        </yAxis>
      </LineChart>
      <HBox spacing="5.0">
         <children>
            <Button fx:id="factorsButton" mnemonicParsing="false" onAction="#onFactorsButtonClick" />
            <HBox fx:id="toolBox" spacing="5.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
