<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hoshisugi.rukoru.app.view.ToolBarController">
   <children>
      <Button fx:id="mcButton" alignment="TOP_LEFT" graphicTextGap="10.0" minWidth="130.0" mnemonicParsing="false" onAction="#onMCButtonClick" text="マネコン" />
      <Button fx:id="testPortalButton" alignment="TOP_LEFT" graphicTextGap="10.0" minWidth="130.0" mnemonicParsing="false" onAction="#onTestPortalButtonClick" text="テストポータル" />
      <Button fx:id="mageButton" alignment="TOP_LEFT" graphicTextGap="10.0" minWidth="130.0" mnemonicParsing="false" onAction="#onMageButtonClick" text="Clear Cache" />
      <ToggleButton fx:id="dsButton" alignment="TOP_LEFT" graphicTextGap="10.0" minWidth="130.0" mnemonicParsing="false" onAction="#onDSButtonClick" text="DataSpider">
         <toggleGroup>
            <ToggleGroup fx:id="toolBar" />
         </toggleGroup>
      </ToggleButton>
      <ToggleButton fx:id="ec2Button" alignment="TOP_LEFT" graphicTextGap="10.0" minWidth="130.0" mnemonicParsing="false" onAction="#onEC2ButtonClick" text="EC2" toggleGroup="$toolBar" />
      <ToggleButton fx:id="repositoryDBButton" alignment="TOP_LEFT" graphicTextGap="10.0" minWidth="130.0" mnemonicParsing="false" onAction="#onRepositoryDBButtonCLick" text="リポジトリDB" toggleGroup="$toolBar" />
      <ToggleButton fx:id="s3Button" alignment="TOP_LEFT" graphicTextGap="10.0" minWidth="130.0" mnemonicParsing="false" onAction="#onS3ButtonCLick" text="S3" toggleGroup="$toolBar" />
   </children>
   <padding>
      <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
   </padding>
</VBox>
