<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<VBox fx:id="layoutRoot" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hoshisugi.rukoru.app.view.video.VideoController">
   <children>
      <StackPane>
         <children>
            <MediaView fx:id="mediaView" fitHeight="495.0" fitWidth="880.0" StackPane.alignment="TOP_LEFT" />
            <Button fx:id="expandButton" mnemonicParsing="false" onAction="#onExpandButtonClick" StackPane.alignment="TOP_RIGHT" />
         </children>
      </StackPane>
      <HBox alignment="CENTER_LEFT" spacing="2.0">
         <children>
            <Button fx:id="playButton" disable="true" mnemonicParsing="false" onAction="#onPlayButtonClick" />
            <Button fx:id="stopButton" disable="true" mnemonicParsing="false" onAction="#onStopButtonClick" />
            <Slider fx:id="progressSlider" disable="true" majorTickUnit="1.0" minorTickCount="0" prefWidth="600.0" />
            <Label fx:id="progressText" disable="true" text="0.00/0.00" />
            <Button fx:id="muteButton" disable="true" mnemonicParsing="false" onAction="#onMuteButtonClick" />
            <Slider fx:id="volumeSlider" blockIncrement="0.1" disable="true" majorTickUnit="0.1" max="1.0" minorTickCount="1" prefWidth="70.0" value="1.0" />
            <Button fx:id="fullScreenButton" disable="true" mnemonicParsing="false" onAction="#onFullScreenButtonClick" />
         </children>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
      </HBox>
   </children>
</VBox>
